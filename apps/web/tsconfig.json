{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "outDir": "./dist",
    "noEmit": true,
    "types": ["vite/client"],
    "paths": {
      "@mindlog/shared": ["../../packages/shared/src/index.ts"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "src/vite-env.d.ts", "vite.config.ts"],
  "exclude": ["dist", "node_modules"]
}
