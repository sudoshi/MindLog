# =============================================================================
# MindLog — Demo Environment Variables
# Copy to .env and fill in the 3 Supabase values below.
# All other defaults are ready for the docker-compose.demo.yml stack.
# =============================================================================

# ---------------------------------------------------------------------------
# Database — Supabase hosted PostgreSQL
# Find this at: Supabase Dashboard → Settings → Database → Connection string
# Use the "URI" tab → "Transaction" mode (port 6543) or "Direct" (port 5432)
# Format: postgresql://postgres.[ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
# ---------------------------------------------------------------------------
DATABASE_URL=postgresql://postgres:demosecret@localhost:5432/mindlogdemo

# ---------------------------------------------------------------------------
# Redis (Docker — already configured)
# ---------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379

# ---------------------------------------------------------------------------
# Supabase — fill in from your Supabase project Settings → API
# ---------------------------------------------------------------------------
SUPABASE_URL=https://gmbmnjkrvcwcerphpgke.supabase.co
SUPABASE_SERVICE_ROLE_KEY=sb_publishable_cgYM9BVZybkVX5T_vIMEMQ_0oomrI2t
JWT_SECRET=NkgpwoK8D9woGuScFnc0X+ycYmzJx4sAVf2eZ4PojPIgAfZZXTk186ChkkwT6XYgT1WPeCssGJgypo1Dkf5hyA==

# ---------------------------------------------------------------------------
# App settings
# ---------------------------------------------------------------------------
NODE_ENV=development
API_PORT=3000
CORS_ORIGIN=http://localhost:5173

# ---------------------------------------------------------------------------
# AI features — Ollama local inference for demo (no BAA required)
# To enable: install Ollama, pull the model, then set AI_INSIGHTS_ENABLED=true
#   ollama pull alibayram/medgemma:27b
# ---------------------------------------------------------------------------
AI_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=alibayram/medgemma:27b
AI_INSIGHTS_ENABLED=false
ANTHROPIC_BAA_SIGNED=false
ANTHROPIC_API_KEY=

# ---------------------------------------------------------------------------
# Email — points at MailHog (no real emails sent)
# View captured emails at http://localhost:8025
# ---------------------------------------------------------------------------
EMAIL_FROM=demo@mindlogdemo.com
RESEND_API_KEY=
SMTP_HOST=localhost
SMTP_PORT=1025

# ---------------------------------------------------------------------------
# Supabase Storage (for PDF reports)
# Create a private bucket named "reports" in your Supabase project
# ---------------------------------------------------------------------------
SUPABASE_STORAGE_BUCKET=reports
