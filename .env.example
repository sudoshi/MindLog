# =============================================================================
# MindLog — Environment Variables
# Copy this file to .env and fill in all values before running the project.
# NEVER commit .env to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Database (Supabase)
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://postgres:[PASSWORD]@[HOST]:5432/postgres"
SUPABASE_URL="https://[PROJECT_ID].supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# -----------------------------------------------------------------------------
# Auth (Supabase Auth / JWT)
# -----------------------------------------------------------------------------
JWT_SECRET="minimum-32-character-secret-for-jwt-signing"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# -----------------------------------------------------------------------------
# API Server
# -----------------------------------------------------------------------------
API_PORT=3000
API_HOST="0.0.0.0"
NODE_ENV="development"
API_BASE_URL="http://localhost:3000"
CORS_ORIGIN="http://localhost:5173"

# -----------------------------------------------------------------------------
# Redis (for BullMQ rules engine + WebSocket pub/sub)
# -----------------------------------------------------------------------------
REDIS_URL="redis://localhost:6379"

# -----------------------------------------------------------------------------
# File Storage (Supabase Storage / S3-compatible)
# -----------------------------------------------------------------------------
STORAGE_BUCKET_REPORTS="mindlog-reports"
STORAGE_URL="https://[PROJECT_ID].supabase.co/storage/v1"

# -----------------------------------------------------------------------------
# Email (Resend)
# -----------------------------------------------------------------------------
RESEND_API_KEY="re_your_resend_api_key"
EMAIL_FROM="MindLog Alerts <alerts@yourdomain.com>"

# -----------------------------------------------------------------------------
# SMS (Twilio — critical alerts only)
# -----------------------------------------------------------------------------
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_FROM_NUMBER="+15550000000"

# -----------------------------------------------------------------------------
# AI Insights
# Set AI_PROVIDER to "ollama" for local inference (no BAA required) or
# "anthropic" for cloud inference (requires signed BAA).
# -----------------------------------------------------------------------------
AI_PROVIDER="anthropic"
ANTHROPIC_API_KEY="sk-ant-your-anthropic-key"
ANTHROPIC_MODEL="claude-sonnet-4-5-20250929"
AI_INSIGHTS_ENABLED="false"

# Ollama (local LLM — used when AI_PROVIDER=ollama)
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_MODEL="alibayram/medgemma:27b"

# -----------------------------------------------------------------------------
# Push Notifications (Expo Push Service → APNs + FCM)
# -----------------------------------------------------------------------------
EXPO_ACCESS_TOKEN="your-expo-access-token"

# -----------------------------------------------------------------------------
# Crisis Resource Contacts (United States)
# Verified quarterly — see SAF-002
# -----------------------------------------------------------------------------
CRISIS_LINE_PHONE="988"
CRISIS_LINE_NAME="988 Suicide & Crisis Lifeline"
CRISIS_TEXT_NUMBER="741741"
CRISIS_TEXT_NAME="Crisis Text Line"

# -----------------------------------------------------------------------------
# Compliance
# -----------------------------------------------------------------------------
# Set to "true" only after BAA with Anthropic is signed
ANTHROPIC_BAA_SIGNED="false"
# Set to "true" only after HIPAA security risk assessment is complete
HIPAA_ASSESSMENT_COMPLETE="false"
